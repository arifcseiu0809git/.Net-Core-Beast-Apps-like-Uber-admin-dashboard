@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	var fullName = User.Identity.IsAuthenticated ? User.Claims.First(c => c.Type == "FullName").Value : "";
}

<!-- Left navbar links -->
<ul class="navbar-nav">
	<li class="nav-item"><a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a></li>
	<li class="nav-item d-none d-sm-inline-block"><a asp-page="/Index" class="nav-link">Home</a></li>
	<li class="nav-item d-none d-sm-inline-block"><a asp-page="/Privacy" class="nav-link">Privacy</a></li>
</ul>
<!-- Left navbar links -->

<!-- User Management -->
@if (!string.IsNullOrEmpty(fullName))
{
	<div class="dropdown navbar-nav ml-auto">
     <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#">
				<span class="hidden-xs">Welcome @fullName</span>
			</a>
    <ul class="dropdown-menu dropdown-menu-end">
      <li><a asp-area="Identity" asp-page="/Account/Manage/Index" class="dropdown-item"><i class="far fa-address-card me-2"></i>Update Profile</a>
				<div class="dropdown-divider"></div></li>
      <li><a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="dropdown-item"><i class="fas fa-key me-2"></i>Change Password</a>
				<div class="dropdown-divider"></div></li>
      <li><a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Log Out</a></li> 
    </ul>
  </div>
}
<!-- User Management -->