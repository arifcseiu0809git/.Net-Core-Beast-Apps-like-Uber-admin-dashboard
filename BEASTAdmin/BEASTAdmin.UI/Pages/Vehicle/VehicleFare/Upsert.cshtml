@page
@model BEASTAdmin.UI.Pages.Vehicle.VehicleFare.UpsertModel
@{
	ViewData["Title"] = "Vehicle Fare Administration";
}

@section Styles
{
<link href="~/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker-standalone.css" rel="stylesheet" />
<link href="~/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.min.css" />
}

@section Scripts
{
<script src="~/plugins/moment.js/moment.min.js"></script>
<script src="~/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/plugins/summernote/summernote-bs4.min.js"></script>

<script>
	$(document).ready(function () {
		$('.NoteArea').summernote(
			{
				height: 150
			}
		);

		$('.custom-file-input').on("change", function () {
			var fileName = $(this).val().split("\\").pop();
			$(this).next('.custom-file-label').html(fileName);
		});
	});
</script>

<partial name="_ValidationScriptsPartial" />
}

@section Breadcrumb
{
<li class="breadcrumb-item"><a asp-page="/Index" class="breadcrumb-link">Home</a></li>
	<li class="breadcrumb-item"><a asp-page="/Vehicle/VehicleFare/List" asp-route-c="vehicleFare" asp-route-p="vehicleFareList" class="breadcrumb-link">Vehicle Fare List</a></li>
<li class="breadcrumb-item active">@ViewData["Title"]</li>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		@Html.Raw(Model.ErrorMessage)
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@Html.Raw(Model.SuccessMessage)
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="post" enctype="multipart/form-data">
	<input asp-for="vehicleFare.Id" type="hidden" />
	
	<div class="row">
		<div class="col-6">
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.VehicleTypeId" class="control-label"></label>
				<select asp-for="vehicleFare.VehicleTypeId" asp-items="@Model.VehicleTypeList" class="form-control">
					<option value="0">Select Vehicle Type</option>
				</select>
				<span asp-validation-for="vehicleFare.VehicleTypeId" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.CostPerMinInServiceArea" class="control-label"></label>
				<input asp-for="vehicleFare.CostPerMinInServiceArea" class="form-control" />
				<span asp-validation-for="vehicleFare.CostPerMinInServiceArea" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.CostPerKmInServiceArea" class="control-label"></label>
				<input asp-for="vehicleFare.CostPerKmInServiceArea" class="form-control" />
				<span asp-validation-for="vehicleFare.CostPerKmInServiceArea" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.CostPerMinOutsideServiceArea" class="control-label"></label>
				<input asp-for="vehicleFare.CostPerMinOutsideServiceArea" class="form-control" />
				<span asp-validation-for="vehicleFare.CostPerMinOutsideServiceArea" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.CancelFee" class="control-label"></label>
				<input asp-for="vehicleFare.CancelFee" class="form-control" />
				<span asp-validation-for="vehicleFare.CancelFee" class="small text-danger"></span>
			</div>
		</div>
		<div class="col-6">
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.BaseFare" class="control-label"></label>
				<input asp-for="vehicleFare.BaseFare" class="form-control" />
				<span asp-validation-for="vehicleFare.BaseFare" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.WaitingCostPerMinInServiceArea" class="control-label"></label>
				<input asp-for="vehicleFare.WaitingCostPerMinInServiceArea" class="form-control" />
				<span asp-validation-for="vehicleFare.WaitingCostPerMinInServiceArea" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.CostPerKmOutsideServiceArea" class="control-label"></label>
				<input asp-for="vehicleFare.CostPerKmOutsideServiceArea" class="form-control" />
				<span asp-validation-for="vehicleFare.CostPerKmOutsideServiceArea" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.BookingFee" class="control-label"></label>
				<input asp-for="vehicleFare.BookingFee" class="form-control" />
				<span asp-validation-for="vehicleFare.BookingFee" class="small text-danger"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="vehicleFare.WaitingCostPerMinOutsideServiceArea" class="control-label"></label>
				<input asp-for="vehicleFare.WaitingCostPerMinOutsideServiceArea" class="form-control" />
				<span asp-validation-for="vehicleFare.WaitingCostPerMinOutsideServiceArea" class="small text-danger"></span>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-12">
			<input type="submit" value="@(string.IsNullOrEmpty(Model.vehicleFare.Id) ? "Create Vehicle Fare" : "Update Vehicle Fare")" class="btn btn-success me-2" />
			<a asp-page="/Vehicle/VehicleFare/List" asp-route-c="vehicleFare" asp-route-p="vehicleFareList" class="btn btn-success">Back to List</a>
		</div>
	</div>
</form>