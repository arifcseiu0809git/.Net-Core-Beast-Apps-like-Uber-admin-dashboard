<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BEAST Admin Panel</title>
	<link rel="shortcut icon" href="~/favicon.ico">

	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/fontawesome.min.css">
	<link rel="stylesheet" href="~/css/adminlte.min.css" />
	@await RenderSectionAsync("Styles", required: false)
	<link rel="stylesheet" href="~/css/site.css" />
	<script src="~/js/jquery.min.js"></script>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
	<div class="wrapper">
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<partial name="TopNavigationPartial" />
		</nav>

		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			<partial name="LeftNavigationPartial" />
		</aside>

		<div class="content-wrapper">
			<!-- PageHeader and Breadcrumb -->
			<div class="content-header container-fluid">
				<div class="row page-header-row">
					<div class="col-sm-6">
						<span class="PageHeader">@ViewData["Title"]</span>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb my-0 float-sm-right">
							@RenderSection("Breadcrumb", required: false)
						</ol>
					</div>
				</div>
			</div>
			<!-- PageHeader and Breadcrumb -->
			<!-- Page Content -->
			<div class="container-fluid">
				<div class="card card-outline card-secondary">
					<div class="card-body">
						@RenderBody()
					</div>
				</div>
			</div>
			<!-- Page Content -->
		</div>

		<footer class="main-footer">
			<partial name="FooterPartial" />
		</footer>
	</div>

	@*<script src="~/js/jquery.min.js"></script>*@
	<script src="~/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/adminlte.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
	<script src="~/js/site.js"></script>
</body>
</html>