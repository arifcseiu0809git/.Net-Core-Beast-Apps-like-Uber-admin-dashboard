@page
@model BEASTAdmin.UI.Pages.PaymentType.PaymentTypeUpsertModel
@{
    ViewData["Title"] = "Payment Type Administration";
}

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

@section Breadcrumb
    {
    <li class="breadcrumb-item"><a asp-page="/Index" class="breadcrumb-link">Home</a></li>
    <li class="breadcrumb-item"><a asp-page="/PaymentType/PaymentTypeList" class="breadcrumb-link" asp-route-c="ptyp" asp-route-p="ptypl">Payment Type List</a></li>
    <li class="breadcrumb-item active">@ViewData["Title"]</li>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @Html.Raw(Model.ErrorMessage)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Html.Raw(Model.SuccessMessage)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <input asp-for="paymentType.Id" type="hidden" />
    <div class="row">
        <div class="col-6">
            <div class="form-group mb-3">
                <label for="Name"> Name</label>
                <input asp-for="paymentType.Name" class="form-control" />
                <span asp-validation-for="paymentType.Name" class="small text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="paymentType.IsActive" class="control-label"></label>
                <input asp-for="paymentType.IsActive" class="form-check" />
            </div>
        </div> 
    </div>

    <div class="form-group">
        <input type="submit" value="@(string.IsNullOrEmpty( Model.paymentType.Id) ? "Create Payment Type" : "Update Payment Type")" class="btn btn-success me-2" />
        <a asp-page="/PaymentType/PaymentTypeList" asp-route-c="ptyp" asp-route-p="ptypl" class="btn btn-success">Back to List</a>
    </div>
</form>