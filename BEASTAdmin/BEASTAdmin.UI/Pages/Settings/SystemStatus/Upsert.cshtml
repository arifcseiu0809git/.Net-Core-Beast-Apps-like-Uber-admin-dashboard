@page
@model BEASTAdmin.UI.Pages.Settings.SystemStatus.UpsertModel
@{
	ViewData["Title"] = "Update System Status";
}

@section Styles
{
	<link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.min.css" />
}

@section Scripts
{
	<script src="~/plugins/summernote/summernote-bs4.min.js"></script>

	<script>
	$(document).ready(function () {
		$('.NoteArea').summernote(
			{
				height: 150
			}
		);
	});
	</script>

	<partial name="_ValidationScriptsPartial" />
}

@section Breadcrumb
{
<li class="breadcrumb-item"><a asp-page="/Index" class="breadcrumb-link">Home</a></li>
<li class="breadcrumb-item"><a asp-page="/Settings/SystemStatus/List" class="breadcrumb-link" asp-route-c="set" asp-route-p="et">System Status</a></li>
<li class="breadcrumb-item active">@ViewData["Title"]</li>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		@Html.Raw(Model.ErrorMessage)
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@Html.Raw(Model.SuccessMessage)
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="post">
	<input asp-for="SystemStatus.Id" type="hidden" />

	<div class="form-group mb-3">
		<label asp-for="SystemStatus.Name" class="control-label"></label>
		<input asp-for="SystemStatus.Name" class="form-control" />
		<span asp-validation-for="SystemStatus.Name" class="small text-danger"></span>
	</div>

	

	<div class="form-group">
		<input type="submit" value="Update System Status" class="btn btn-success me-2" />
		<a asp-page="/Settings/SystemStatus/List" asp-route-c="set" asp-route-p="ss" class="btn btn-success">Back to List</a>
	</div>
</form>